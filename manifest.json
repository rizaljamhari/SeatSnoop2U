{
  "manifest_version": 3,
  "name": "SeatSnoop2U: Ticket2U Event Companion",
  "version": "1.0.0",
  "description": "Show the number of seats/tickets available for a Ticket2U event. This extension is not affiliated with Ticket2U.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.ticket2u.com.my/event/*",
        "https://www.ticket2u.com.my/event/cd?id=*",
        "https://ticket2u.com.my/event/*",
        "https://ticket2u.com.my/event/cd?id=*",
        "https://www.ticket2u.com.sg/event/*",
        "https://www.ticket2u.com.sg/event/cd?id=*",
        "https://ticket2u.com.sg/event/*",
        "https://ticket2u.com.sg/event/cd?id=*",
        "https://www.ticket2u.id/event/*",
        "https://www.ticket2u.id/event/cd?id=*",
        "https://ticket2u.id/event/*",
        "https://ticket2u.id/event/cd?id=*"
      ]
    }
  ]
}
